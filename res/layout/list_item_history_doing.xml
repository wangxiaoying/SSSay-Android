<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/doing_category_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/fixing" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/doing_his_lv_doing"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="#2196f3"
            android:textSize="30sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/doing_his_lv_starttime"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:paddingLeft="10dp"
                android:textColor="#2E8B57"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/doing_his_lv_endtime"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:gravity="right"
                android:paddingRight="10dp"
                android:textColor="#C71585"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
	<TextView 
        android:id="@+id/doing_category"
        android:layout_width="1dp"
        android:singleLine="True"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>
</LinearLayout>